# EditorConfig: http://EditorConfig.org

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
charset = utf-8

# in markdown files trailing whitespace may be used to indicate a continuation
[*.md]
trim_trailing_whitespace = false

[.eslintrc.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
